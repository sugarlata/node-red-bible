{
  "name": "@sugarlata/node-red-bible",
  "version": "0.0.0-development",
  "description": "A Node-RED custom node to download scripture from bible gateway.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sugarlata/node-red-bible.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ]
  },
  "keywords": [
    "node-red"
  ],
  "author": "Nathan Sgarlata",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sugarlata/node-red-bible/issues"
  },
  "homepage": "https://github.com/sugarlata/node-red-bible#readme",
  "node-red": {
    "version": ">=1.2.0",
    "nodes": {
      "getScripture": "nodes/getBGScripture.js",
      "getLink": "nodes/getBGLink.js"
    }
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "cz-conventional-changelog": "^3.3.0",
    "mocha": "^10.2.0",
    "node-red": "^2.2.2",
    "node-red-node-test-helper": "^0.3.2",
    "semantic-release": "^21.0.7"
  },
  "scripts": {
    "test": "mocha \"tests/**/*_spec.js\"",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "node-html-parser": "^6.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
